<Window x:Class="SenoraRP_Chatlog_Assistant.UI.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SenoraRP_Chatlog_Assistant.UI"
        mc:Ignorable="d"
        Closing="ChatLogFilter_Closing"
        Title="SenoraRP Chatlog Assistant - Filter" Height="337" Width="494" ShowInTaskbar="True" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="/Resources/icon.ico">
    <!--Add the WindowChrome object-->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="34" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>

            <!--Base style for title bar buttons-->
            <Style x:Key="CaptionButtonStyle" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid x:Name="LayoutRoot" Background="Transparent" Width="44" Height="30">
                                <TextBlock x:Name="txt" Text="{TemplateBinding Content}" FontFamily="Segoe MDL2 Assets" FontSize="10" 
                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   RenderOptions.ClearTypeHint="Auto" TextOptions.TextRenderingMode="Aliased"  TextOptions.TextFormattingMode="Display"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="LayoutRoot" Property="Background" Value="#CCC"/>
                                    <Setter TargetName="txt" Property="Foreground" Value="#000"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--Close-->
            <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CaptionButtonStyle}">
                <Setter Property="Content" Value="&#xE106;"/>
            </Style>

            <Style TargetType="{x:Type CheckBox}">
                <Setter Property="Background" Value="White" />
                <Setter Property="BorderBrush" Value="Black"/>
                <!--                           your color here -->
                <Setter Property="Foreground" Value="HotPink"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type CheckBox}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >
                                <Border BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Width="15" Height="15">
                                    <Grid>
                                        <Grid Background="{TemplateBinding Foreground}" Margin="1" Visibility="Collapsed" Name="nullBlock"/>
                                        <Path Stretch="Uniform" Width="15" Height="10" Fill="{TemplateBinding Foreground}" Name="eliCheck" Data="F1 M 9.97498,1.22334L 4.6983,9.09834L 4.52164,9.09834L 0,5.19331L 1.27664,3.52165L 4.255,6.08833L 8.33331,1.52588e-005L 9.97498,1.22334 Z " Visibility="Collapsed"/>
                                    </Grid>
                                </Border>
                                <TextBlock Margin="5,0,0,0"  VerticalAlignment="Center" Foreground="White" Text="{TemplateBinding Content}"></TextBlock>
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="LightGray" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF9C9E9F" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="LightGray" />
                                    <Setter Property="Foreground" Value="Gray" />
                                    <Setter Property="BorderBrush" Value="Gray"/>
                                    <Setter TargetName="eliCheck" Property="Opacity" Value="0.5" />
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="eliCheck" Property="Visibility" Value="Visible"></Setter>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="{x:Null}">
                                    <Setter TargetName="nullBlock" Property="Visibility" Value="Visible"></Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <!--Title bar button commands-->
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static SystemCommands.CloseWindowCommand}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed_Close" />
    </Window.CommandBindings>

    <Border x:Name="BackupSettingsWindowBorder" BorderBrush="Black" BorderThickness="0" >
        <Grid x:Name="parentContainer" Background="#CC000000">

            <Grid.RowDefinitions>
                <RowDefinition Height ="Auto"/>
                <RowDefinition Height ="*"/>
            </Grid.RowDefinitions>

            <!--Window chrome-->
            <Grid Grid.Row="0" Height="30" Background="Black">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <!--App icon-->
                    <Image Source="/Resources/icon.ico" Width="30" Margin="5,2,2,2" HorizontalAlignment="Left" VerticalAlignment="Center" />
                    <TextBlock Text=" Chatlog Assistant - Filter" FontFamily="Arial" VerticalAlignment="Center" Foreground="White" />
                </StackPanel>

                <!--Caption buttons-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Button Style="{StaticResource CloseButtonStyle}" WindowChrome.IsHitTestVisibleInChrome="True" ToolTip="Close"
                            Command="{x:Static SystemCommands.CloseWindowCommand}"/>
                </StackPanel>
            </Grid>

            <!--App content-->
            <Grid Grid.Row="1" x:Name="FilterArea">
                <Label x:Name="StatusLabel" Content="Chat log not loaded" FontWeight="DemiBold" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="329" Foreground="Red"/>
                <Label x:Name="TimeLabel" Content="Current time: 23:23:23" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="344,10,0,0" VerticalAlignment="Top" Width="140" Foreground="White"/>
                <Button x:Name="LoadUnparsed" Click="LoadUnparsed_Click" Content="Load Unparsed Chat Log" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="150" BorderBrush="#CC000000" Foreground="Black" Background="#FF58B686"/>
                <Button x:Name="BrowseForParsed" Click="BrowseForParsed_Click" Content="Browse For Parsed Chat Log" HorizontalAlignment="Left" Margin="165,41,0,0" VerticalAlignment="Top" Width="174" BorderBrush="#CC000000" Foreground="Black" Background="#FF58B686"/>
                <Button x:Name="FilterModeToggle" Click="FilterModeToggle_Click" Content="Advanced Filter" HorizontalAlignment="Left" Margin="344,41,0,0" VerticalAlignment="Top" Width="140" BorderBrush="#CC000000" Foreground="Black" Background="#FF58B686"/>
                <TextBox x:Name="Filtered" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" Height="179" Margin="165,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="319" AcceptsReturn="True"/>


                <CheckBox x:Name="IC" Checked="Criterion_CheckedChanged" Unchecked="Criterion_CheckedChanged" Content="Local" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top" Width="70" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="OOC" Checked="Criterion_CheckedChanged" Unchecked="Criterion_CheckedChanged" Content="OOC" HorizontalAlignment="Left" Margin="90,73,0,0" VerticalAlignment="Top" Width="70" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="Emote" Checked="Criterion_CheckedChanged" Unchecked="Criterion_CheckedChanged" Content="Emote" HorizontalAlignment="Left" Margin="10,96,0,0" VerticalAlignment="Top" Width="70" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="Action" Checked="Criterion_CheckedChanged" Unchecked="Criterion_CheckedChanged" Content="Action" HorizontalAlignment="Left" Margin="90,96,0,0" VerticalAlignment="Top" Width="70" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="Radio" Checked="Criterion_CheckedChanged" Unchecked="Criterion_CheckedChanged" Content="Radio" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top" Width="70" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="PM" Checked="Criterion_CheckedChanged" Unchecked="Criterion_CheckedChanged" Content="PM" HorizontalAlignment="Left" Margin="90,119,0,0" VerticalAlignment="Top" Width="70" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="Ads" Checked="Criterion_CheckedChanged" Unchecked="Criterion_CheckedChanged" Content="Advertisements" HorizontalAlignment="Left" Margin="10,142,0,0" VerticalAlignment="Top" Width="150" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="None1" IsEnabled="False" Visibility="Hidden" Checked="Criterion_CheckedChanged" Unchecked="Criterion_CheckedChanged" Content="None" HorizontalAlignment="Left" Margin="10,164,0,0" VerticalAlignment="Top" Width="70" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="None2" IsEnabled="False" Visibility="Hidden" Checked="Criterion_CheckedChanged" Unchecked="Criterion_CheckedChanged" Content="None" HorizontalAlignment="Left" Margin="90,165,0,0" VerticalAlignment="Top" Width="70" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="None3" IsEnabled="False" Visibility="Hidden" Checked="Criterion_CheckedChanged" Unchecked="Criterion_CheckedChanged" Content="None" HorizontalAlignment="Left" Margin="10,187,0,0" VerticalAlignment="Top" Width="70" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="None4" IsEnabled="False" Visibility="Hidden" Checked="Criterion_CheckedChanged" Unchecked="Criterion_CheckedChanged" Content="None" HorizontalAlignment="Left" Margin="90,188,0,0" VerticalAlignment="Top" Width="70" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>

                <CheckBox x:Name="Other" Checked="Criterion_CheckedChanged" Unchecked="Criterion_CheckedChanged" Content="Other (not above)" HorizontalAlignment="Left" Margin="10,211,0,0" VerticalAlignment="Top" Width="150" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="RemoveTimestamps" Checked="RemoveTimestamps_CheckedChanged" Unchecked="RemoveTimestamps_CheckedChanged" Content="Remove timestamps" HorizontalAlignment="Left" Margin="10,234,0,0" VerticalAlignment="Top" Width="150" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>


                <Button x:Name="SaveFiltered" Click="SaveFiltered_Click" Content="Save As" HorizontalAlignment="Left" Margin="10,257,0,0" VerticalAlignment="Top" Width="150" BorderBrush="#CC000000" Foreground="Black" Background="#FF58B686"/>
                <Button x:Name="CopyFilteredToClipboard" Click="CopyFilteredToClipboard_Click" Content="Copy To Clipboard" HorizontalAlignment="Left" Margin="165,257,0,0" VerticalAlignment="Top" Width="319" BorderBrush="#CC000000" Foreground="Black" Background="#FF58B686"/>

                <Label x:Name="WordsLabel" Content="Words to filter in:" HorizontalAlignment="Left" Margin="492,48,0,0" VerticalAlignment="Top" Width="150"/>
                <TextBox x:Name="Words" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" Height="179" Margin="496,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Text="Firstname Lastname" AcceptsReturn="True" GotKeyboardFocus="Words_GotKeyboardFocus"/>
                <Button x:Name="Filter" Click="Filter_Click" Content="Filter" HorizontalAlignment="Left" Margin="496,257,0,0" VerticalAlignment="Top" Width="150" GotKeyboardFocus="Filter_GotKeyboardFocus"/>

            </Grid>
        </Grid>
    </Border>
</Window>