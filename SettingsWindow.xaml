<Window x:Class="SenoraRP_Chatlog_Assistant.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SenoraRP_Chatlog_Assistant.UI"
        mc:Ignorable="d"
        Closing="BackupSettings_Closing"
        Title="SenoraRP Chatlog Assistant" Height="354" Width="476" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="/Resources/icon.ico">
    <!--Add the WindowChrome object-->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="34" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>

            <!--Base style for title bar buttons-->
            <Style x:Key="CaptionButtonStyle" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid x:Name="LayoutRoot" Background="Transparent" Width="44" Height="30">
                                <TextBlock x:Name="txt" Text="{TemplateBinding Content}" FontFamily="Segoe MDL2 Assets" FontSize="10" 
                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   RenderOptions.ClearTypeHint="Auto" TextOptions.TextRenderingMode="Aliased"  TextOptions.TextFormattingMode="Display"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="LayoutRoot" Property="Background" Value="#CCC"/>
                                    <Setter TargetName="txt" Property="Foreground" Value="#000"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--Close-->
            <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CaptionButtonStyle}">
                <Setter Property="Content" Value="&#xE106;"/>
            </Style>

            <Style TargetType="{x:Type CheckBox}">
                <Setter Property="Background" Value="White" />
                <Setter Property="BorderBrush" Value="Black"/>
                <!--                           your color here -->
                <Setter Property="Foreground" Value="HotPink"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type CheckBox}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" >
                                <Border BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" Width="15" Height="15">
                                    <Grid>
                                        <Grid Background="{TemplateBinding Foreground}" Margin="1" Visibility="Collapsed" Name="nullBlock"/>
                                        <Path Stretch="Uniform" Width="15" Height="10" Fill="{TemplateBinding Foreground}" Name="eliCheck" Data="F1 M 9.97498,1.22334L 4.6983,9.09834L 4.52164,9.09834L 0,5.19331L 1.27664,3.52165L 4.255,6.08833L 8.33331,1.52588e-005L 9.97498,1.22334 Z " Visibility="Collapsed"/>
                                    </Grid>
                                </Border>
                                <TextBlock Margin="5,0,0,0"  VerticalAlignment="Center" Foreground="White" Text="{TemplateBinding Content}"></TextBlock>
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="LightGray" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF9C9E9F" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="LightGray" />
                                    <Setter Property="Foreground" Value="Gray" />
                                    <Setter Property="BorderBrush" Value="Gray"/>
                                    <Setter TargetName="eliCheck" Property="Opacity" Value="0.5" />
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="eliCheck" Property="Visibility" Value="Visible"></Setter>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="{x:Null}">
                                    <Setter TargetName="nullBlock" Property="Visibility" Value="Visible"></Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <!--Title bar button commands-->
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static SystemCommands.CloseWindowCommand}" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed_Close" />
    </Window.CommandBindings>

    <Border x:Name="BackupSettingsWindowBorder" BorderBrush="Black" BorderThickness="0" >
        <Grid x:Name="parentContainer" Background="#CC000000">

            <Grid.RowDefinitions>
                <RowDefinition Height ="Auto"/>
                <RowDefinition Height ="*"/>
            </Grid.RowDefinitions>

            <!--Window chrome-->
            <Grid Grid.Row="0" Height="30" Background="Black">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <!--App icon-->
                    <Image Source="/Resources/icon.ico" Width="30" Margin="5,2,2,2" HorizontalAlignment="Left" VerticalAlignment="Center" />
                    <TextBlock Text=" Chatlog Assistant - Settings" FontFamily="Arial" VerticalAlignment="Center" Foreground="White" />
                </StackPanel>

                <!--Caption buttons-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Button Style="{StaticResource CloseButtonStyle}" WindowChrome.IsHitTestVisibleInChrome="True" ToolTip="Close"
                            Command="{x:Static SystemCommands.CloseWindowCommand}"/>
                </StackPanel>
            </Grid>

            <!--App content-->
            <Grid Grid.Row="1" x:Name="SettingsArea">
                <Label x:Name="BackupPathLabel" Content="Backup Path:" HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top" Width="455" Foreground="White"/>
                <TextBox x:Name="BackupPath" MouseLeftButtonUp="BackupPath_MouseLeftButtonUp" TextChanged="BackupPath_TextChanged" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="370" IsReadOnly="True" VerticalScrollBarVisibility="Disabled" Foreground="White" BorderBrush="Black" Background="#CC000000"/>
                <Button x:Name="Browse" Click="Browse_Click" Content="Browse" HorizontalAlignment="Left" Margin="385,36,0,0" VerticalAlignment="Top" Width="75" BorderBrush="#CC000000" Foreground="Black" Background="#FF58B686"/>
                <CheckBox x:Name="BackUpChatLogAutomatically" Checked="BackUpChatLogAutomatically_CheckedChanged" Unchecked="BackUpChatLogAutomatically_CheckedChanged"  Content="Parse and back up the chat log automatically (when the game closes)" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="450" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="EnableIntervalBackup" Content="Back up the chat log automatically while the game is running (every 10 minutes)" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top" Width="450" IsEnabled="False" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="RemoveTimestamps" Content="Remove timestamps from backup" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Width="450" IsEnabled="False" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="SuppressNotifications" Content="Suppress successful backup notifications" HorizontalAlignment="Left" Margin="10,138,0,0" VerticalAlignment="Top" Width="450" IsEnabled="False" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="AlwaysCloseToTray" Content="Always close to the system tray" HorizontalAlignment="Left" Margin="10,184,0,0" VerticalAlignment="Top" Width="290" IsEnabled="False" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="StartWithWindows" Checked="StartWithWindows_CheckedChanged" Unchecked="StartWithWindows_CheckedChanged" Content="Start with Windows (minimized)" HorizontalAlignment="Left" Margin="10,207,0,0" VerticalAlignment="Top" Width="290" IsEnabled="False" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <Button x:Name="Reset" Click="Reset_Click" Content="Reset" HorizontalAlignment="Right" Margin="0,270,10,0" VerticalAlignment="Top" Width="75" BorderBrush="#CC000000" Foreground="Black" Background="#FF58B686"/>
                <CheckBox x:Name="WarnWithHash" Content="Warn when the same chat log has been saved 2 or more times" HorizontalAlignment="Left" Margin="10,161,0,0" VerticalAlignment="Top" Width="450" IsEnabled="False" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="DisableInformationPopups" Content="Disable most Information popups" HorizontalAlignment="Left" Margin="10,231,0,0" VerticalAlignment="Top" Width="281" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="DisableWarningPopups" Content="Disable most Warning popups" HorizontalAlignment="Left" Margin="10,254,0,0" VerticalAlignment="Top" Width="281" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
                <CheckBox x:Name="DisableErrorPopups" Content="Disable most Error popups" HorizontalAlignment="Left" Margin="10,277,0,0" VerticalAlignment="Top" Width="281" Foreground="White" Background="#CC000000" BorderBrush="#CC58B686"/>
            </Grid>
        </Grid>
    </Border>
</Window>